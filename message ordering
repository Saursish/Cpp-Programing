#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

class Message {
    static int id;
    string text;
    int current_id;
public: 
    Message() {current_id=id++;}
    Message(string s) {current_id=id++,text = s;}
    const string& get_text() {
        return text;
    }
    bool operator<(Message m)
    {
        if(current_id<m.current_id)
        return true;
        else
        return false;
    }
    
};
int Message::id=0;
class MessageFactory {
public:
    MessageFactory() {}
    Message create_message(const string& text) {
        Message msg(text);
        return msg;
    }
};

class Recipient {
